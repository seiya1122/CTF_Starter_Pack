{
  "name": "CTF Starter Pack",
  "build": {
    "dockerfile": "Dockerfile"
  },
  
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.cpptools",
        "ms-vscode.hexeditor",
        "13xforever.language-x86-64-assembly",
        "ms-toolsai.jupyter"
      ]
    }
  },

  // ポート設定: Burp(8080)を避け、Web問(1337, 8000), SageMath(9999)を使用
  "forwardPorts": [1337, 8000, 9999],

  "remoteUser": "root",
  "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"]
}